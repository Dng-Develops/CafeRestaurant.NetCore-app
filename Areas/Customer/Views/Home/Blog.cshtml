@model CafeRestaurant.Models.Blog
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_ALayout.cshtml";
}


<!-- Title Page -->
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(/Site/images/bg-title-page-03.jpg);">
    <h2 class="tit6 t-center">
        Blog
    </h2>
</section>


<!-- Content page -->
<section>
    <div class="container">
        <div class="row ">
            <div class="col-md-8 col-lg-9">
                <div class="p-t-80 p-b-124 bo5-r p-r-50 h-full p-r-0-md bo-none-md">
                    <!-- Block4 -->
                    @await Component.InvokeAsync("Comments")

                    <!-- Leave a comment -->
                    <form class="leave-comment p-t-10" asp-action="Blog" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>   
                        <h4 class="txt33 p-b-14">
                            Leave a Comment
                        </h4>

                        <p>
                            Your email address will not be published. Required fields are marked *
                        </p>

                        <div class="size30 bo2 bo-rad-10 m-t-3 m-b-20  m-t-40">
                            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Title" placeholder="Title *">
                            <span asp-validation-for="Title"></span>
                        </div>

                        <textarea asp-for="Message" class="bo-rad-10 size29 bo2 txt10 p-l-20 p-t-15 m-b-10 "  placeholder="Comment..."></textarea>
                        <span asp-validation-for="Message"></span>

                          <div class="size30 bo2 bo-rad-10 m-t-3 m-b-20">
                         <input class="form-control bo-rad-10 sizefull txt10 p-l-20" asp-for="Image" type="file"/>
                        </div>

                        <div class="size30 bo2 bo-rad-10 m-t-3 m-b-20 ">
                            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Name" placeholder="Name *">
                            <span asp-validation-for="Name"></span>
                        </div>

                        <div class="size30 bo2 bo-rad-10 m-t-3 m-b-20">
                            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Email" placeholder="Email *">
                            <span asp-validation-for="Email"></span>
                        </div>

                        <!-- Button3 -->
                        <button type="submit" class="btn3 flex-c-m size31 txt11 trans-0-4">
                            Post Comment
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}