@model IEnumerable<CafeRestaurant.Models.Gallery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <h1>Gallery</h1>
    <a class="btn btn-primary" asp-action="Create">Add New Gallery Image</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Image == null)
                {
                        <img src="~/Site/images/image-not-found-.jpg" width="100" height="80"/>
                    }
                    else
                    {
                       <img src="@item.Image" width="100" height="80"/>
                    }
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>  Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
